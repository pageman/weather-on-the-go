    <div class="register">
    <div class="container">

      <div class="left-register">
      <form class="form-register" action="/signup/mobile" method="POST">
        <h2 class="form-register-heading">Signup Now!</h2>
        <% if(message != undefined || message != null){ %>
              <div class="alert alert-<%-message.type%>">
                <%-message.message%>
              </div>
        <% } %>
        <input type="hidden" name="_csrf" value="<%-_csrf%>" />
        <input type="text" class="form-control" name="mobile_number" placeholder="Enter your Mobile Number +63 XXX XXXXXXX" autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Send</button>
      </form>
      </div>
      <div class="forms"></div>
      <div class="right-login">
      <form class="form-login" action="/signup/web" method="POST">
        <input type="hidden" name="_csrf" value="<%-_csrf%>" />
        <h2 class="form-login-heading">Login</h2>
        <input type="text" class="form-control" placeholder="Enter your username" autofocus name="username" />
        <input type="password" class="form-control" placeholder="Enter your password" autofocus name="password" />
        <input type="password" class="form-control" placeholder="Repeat your password" autofocus name="repeat_password" />
        <input type="email" class="form-control" placeholder="Enter your email address" autofocus name="email">
        <a class="form-forgot" href="#">Forgot Password?</a>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
      </form>
      </div>

    </div> <!-- /container -->
    <div class="footer">
      <p>Copyright &amp; 2013 <a href="#">Weather on the go</a>. All rights reserved.</p>
    </div>
    </div>
